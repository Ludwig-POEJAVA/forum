<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
	<display-name>Forum</display-name>

<!--  home -->
	<servlet>
		<servlet-name>accueil</servlet-name>
		<servlet-class>fr.acceis.forum.servlet.AccueilServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>accueil</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	
<!--  LOGIN -->
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>fr.acceis.forum.servlet.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
<!--  LOGOUT -->
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>fr.acceis.forum.servlet.LogoutServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>	
	
<!--  REGISTER -->
	<servlet>
		<servlet-name>Register</servlet-name>
		<servlet-class>fr.acceis.forum.servlet.RegisterServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>

</web-app>