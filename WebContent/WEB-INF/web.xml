    <servlet-name>Register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>CreateThread</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.CreateThreadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateThread</servlet-name>
    <url-pattern>/createthread</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ViewTopic</servlet-name>
    <servlet-class>fr.acceis.forum.servlet.ViewTopicServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ViewTopic</servlet-name>
    <url-pattern>/viewTopic</url-pattern>
  </servlet-mapping>
  
</web-app>